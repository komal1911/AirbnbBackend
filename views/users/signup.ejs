<% layout("/layouts/boilerplate")%>
<div class="row mt-3">
    <div class="col-6 offset-2">
        <h1>Signup For Wanderlust</h1>
        <form action="/signup" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
        
                <label for="username" class="form-label">Username</label>
                <input name="username" required placeholder="enter your username" class="form-control" type="text"/>
                <div class="valid-feedback">
                    Looks good!
                  </div>
                  <div class="invalid-feedback">
                    Please add a valid username.
                  </div>
                </div>

                <div class="mb-3">
        
                    <label for="email" class="form-label">Email</label>
                    <input name="email" required placeholder="enter your email" class="form-control" type="text"/>
                    <div class="valid-feedback">
                        Looks good!
                      </div>
                    </div>

                    <div class="mb-3">
        
                        <label for="password" class="form-label">Password</label>
                        <input name="password" required placeholder="enter your password" class="form-control" type="text"/>
                        <div class="valid-feedback">
                            Looks good!
                          </div>
                          <div class="invalid-feedback">
                            Please add a valid password.
                          </div>
                        </div>

                        <button class="btn btn-success">Submit</button>
        </form>
        </div>
    </div>